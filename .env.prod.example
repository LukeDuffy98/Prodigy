# Production Environment Configuration for Azure
# Copy this to .env.prod and fill in actual values

# Azure Environment
ASPNETCORE_ENVIRONMENT=Production
NODE_ENV=production

# Azure AD Configuration
AZURE_TENANT_ID=your-azure-tenant-id
AZURE_CLIENT_ID=your-azure-client-id
AZURE_CLIENT_SECRET=your-azure-client-secret

# Microsoft Graph API
MICROSOFT_GRAPH_API_URL=https://graph.microsoft.com/v1.0

# LinkedIn API
LINKEDIN_CLIENT_ID=your-linkedin-client-id
LINKEDIN_CLIENT_SECRET=your-linkedin-client-secret

# GitHub API
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret
GITHUB_API_URL=https://api.github.com
GITHUB_TOKEN=your-github-personal-access-token
GITHUB_REPO_OWNER=LukeDuffy98
GITHUB_REPO_NAME=Prodigy

# JWT Configuration (use strong production keys)
JWT_SECRET_KEY=your-strong-production-jwt-secret-key
JWT_ISSUER=Prodigy
JWT_AUDIENCE=ProdigyUsers

# Azure App Service URLs (will be replaced after deployment)
REACT_APP_API_BASE_URL=https://prodigy-prod-api.azurewebsites.net/api
AZURE_FUNCTIONS_URL=https://prodigy-prod-functions.azurewebsites.net/api

# Application Insights (will be auto-configured by Azure)
APPLICATIONINSIGHTS_CONNECTION_STRING=

# Database Configuration (if needed in the future)
CONNECTION_STRING=

# Security Settings
ASPNETCORE_URLS=http://localhost:80
ASPNETCORE_FORWARDEDHEADERS_ENABLED=true

# Azure Resource Configuration
AZURE_RESOURCE_GROUP=rg-prodigy-prod
AZURE_LOCATION=eastasia