# Prodigy Environment Configuration Template
# Copy this file to .env and fill in your actual values

# Azure Configuration
AZURE_CLIENT_ID=your_azure_client_id_here
AZURE_CLIENT_SECRET=your_azure_client_secret_here
AZURE_TENANT_ID=your_azure_tenant_id_here

# Microsoft Graph API
MICROSOFT_GRAPH_API_URL=https://graph.microsoft.com/v1.0

# LinkedIn API
LINKEDIN_CLIENT_ID=your_linkedin_client_id_here
LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret_here

# GitHub API
GITHUB_CLIENT_ID=your_github_client_id_here
GITHUB_CLIENT_SECRET=your_github_client_secret_here
GITHUB_API_URL=https://api.github.com

# Database Configuration
CONNECTION_STRING=your_database_connection_string_here

# JWT Configuration
JWT_SECRET_KEY=your_jwt_secret_key_here
JWT_ISSUER=Prodigy
JWT_AUDIENCE=ProdigyUsers

# Application Insights
APPINSIGHTS_INSTRUMENTATIONKEY=your_application_insights_key_here

# Frontend Configuration
REACT_APP_API_BASE_URL=https://localhost:7001/api
REACT_APP_AZURE_CLIENT_ID=${AZURE_CLIENT_ID}

# Development Settings
ASPNETCORE_ENVIRONMENT=Development
ASPNETCORE_URLS=https://localhost:7001;http://localhost:5000