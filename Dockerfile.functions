# Azure Functions Dockerfile
FROM mcr.microsoft.com/azure-functions/dotnet-isolated:4-dotnet-isolated8.0 AS base
WORKDIR /home/site/wwwroot
EXPOSE 80

FROM mcr.microsoft.com/dotnet/sdk:8.0 AS build
WORKDIR /src
COPY ["azure-functions/Prodigy.Functions.csproj", "azure-functions/"]
RUN dotnet restore "azure-functions/Prodigy.Functions.csproj"
COPY . .
WORKDIR "/src/azure-functions"
RUN dotnet build "Prodigy.Functions.csproj" -c Release -o /app/build

FROM build AS publish
RUN dotnet publish "Prodigy.Functions.csproj" -c Release -o /app/publish /p:UseAppHost=false

FROM base AS final
WORKDIR /home/site/wwwroot
COPY --from=publish /app/publish .
ENV AzureWebJobsScriptRoot=/home/site/wwwroot \
    AzureFunctionsJobHost__Logging__Console__IsEnabled=true